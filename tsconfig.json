{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "ESNext",
    "lib": ["ES6", "DOM", "DOM.Iterable", "ScriptHost"],
    "jsx": "react-jsx",
    "noEmit": false,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", "config", "tmp", ".git", "public"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
